<form action='@Url.Action("GuardarPublicacion", "Home")' method="post" enctype="multipart/form-data" >
    <input class="form-control" type="hidden" name="IdCategoria" id="IdCategoria" value="@ViewBag.IdCategoria">
    <input class="form-control" type="hidden" name="IdUsuario" id="IdUsuario" value="@ViewBag.IdUsuario">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Titulo" name="Titulo" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Imagen" name="Imagen" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Contenido" name="Contenido" required>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>